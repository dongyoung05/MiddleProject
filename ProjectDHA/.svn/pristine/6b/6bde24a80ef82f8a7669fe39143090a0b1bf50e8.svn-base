	.prodName {
		font-weight: bold;
		margin-bottom: 5px;
	}
	
	.prodQty {
		display: flex;
		align-items: center;
	}
	
	.prodPrice {
		font-weight: bold;
	}
	
	.qty-label {
		margin-right: 10px;
	}
	
	.buttons {
		display: flex;
        align-items: center;
	}
	
	.qty-button {
		display: inline-block;
		width: 30px;
		height: 30px;
		background-color: #f0f0f0;
		border: 1px solid #ccc;
		border-radius : 15px;
		text-align: center;
		line-height: 28px;
		cursor: pointer;
        margin: 0 5px;
	}
	
	.qty-button:hover {
		background-color: #e0e0e0;
	}
	
	.removeButton {
		width : 50px;
		height : 30px;
	}
	
	#printResult {
		background-color: #f5f5f5;
		padding: 20px;
		border-top: 1px solid #ddd;
		text-align: right;
		font-weight: bold;
		
		font-size : 24px;
	}
	
	#printResult span {
		color: #f44336;
	}
	
	.backProd {
		text-align: center;
		margin-top: 20px;
	}
	
	.backProd button {
		background-color: #4caf50;
		color: #fff;
		border: none;
		padding: 10px 20px;
		border-radius: 5px;
		cursor: pointer;
	}
	
    .backProd button:hover {
		background-color: #388e3c;
    }
	
	#checkout {
		background-color: #4caf50;
		color: #fff;
		border: none;
		padding: 15px 20px;
		border-radius: 5px;
		cursor: pointer;
		margin-top: 20px;
		display: block;
		margin-left: auto;
		margin-right: 20px;
    }
    
    #checkout:hover {
		background-color: #388e3c;
    }
    
    