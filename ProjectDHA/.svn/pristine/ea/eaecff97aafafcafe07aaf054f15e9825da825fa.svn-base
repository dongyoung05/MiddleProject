@charset "UTF-8";

/********** 공통 CSS **********/

	div { 
		margin: 5px; 
	} 
	
	body {
		padding: 1% 12% 1% 12%;
	}
	
	.header {
		display : flex;
		text-align: center;
	}
	
	.nav {
		margin-bottom: 50px;	
	}
	
	#bigPage {
		width: 100%;
		display: flex; 
		justify-content: center; 
	}
	
	#bigPage div {
		width: 10%;
		text-align: center;
	}
	
	#smallPage {
		width: 100%;
		display: flex;
		justify-content: center; 
		margin-bottom: 30px; 
	}
	
	#smallPage div {
		width: 10%;
		text-align: center;
		color: gray;
	}
	
	#side, #section, #title {
		text-align: center;
	}
	
	#side {
		border: 3px solid black;
		border-radius: 15px;
		display: flex;
		justify-content: space-around;
		padding: 0 25%;
	}
	
	#side p {
		width: 80px;
		margin: 10px 0 10px 0;
	}
	
	#side p:hover {
		font-weight: bold;
	}
	
	#section {
		height: 3200px; 
	}
	
	iframe {
		width: 100%;
		height: 100%;
		margin-top: 60px;
		border: none;
	}
	
	.footer {
		height: 50px;
		display: flex;
		justify-content: space-around;
	}
	
	.hr {
		border: 1px solid black;
		width: 40%;
		margin: 0 auto;
	}
	
	#profile {
		margin-left : auto;
		display : flex;
	}
	
	#profile_detail {
		width : 200px;
	}
	
	#profile_detail a {
		margin-right: 10px;
	}
	
	img {
		width: 90%;
		height: 90%;
	}
	
	#profileImg {
		height: 70px;
		width: 70px;
		border: 2px solid black;
		border-radius: 50%;
		margin-top: 15px;
	}
	
	#logo{
		height: 100px;
		width: 120px;
		margin-left: 45%;
	}


/********** Prod Main (ProdSale.jsp) **********/

	#side {
		padding: 0;
	}

	#prod_container {
		display : flex;
		flex-flow: row wrap;
		justify-content: space-between;
		align-content: flex-start;
	}
	
	.non-item {
		width : 100%
	}
	
	.item {
		width: calc(25% - 7px);
		aspect-ratio: 6/5;
		position: relative;
		overflow: hidden;
		border-radius: 10px;
	}
	
	.item:after {
		display: block;
		content: "";
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, 0.2);
		position: absolute;
		top: 0;
		left: 0;
		z-index: 2;
		opacity: 0;
	}
	
	.thumbnail {
		width: 100%;
		height: 100%;
		position: absolute;
	}
	
	.thumbnail img {
		width : 100%;
		height : 100%;
		object-fit: cover;
		z-index : 1;
	}
	
	.description{
		position: absolute;
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: flex-end;
		align-items: flex-start;
		z-index: 3;
	}
	
	.description p {
		color: black;
		margin: 10px 0;
	}
	.description .prod_name {
		font-size: 20px;
		font-weight: 6000;
		opacity: 0;
 		transform: translateY(50px);
	}
	
	.description .prod_price {
		font-size: 14px;
		font-weight: 400;
		opacity: 0;
 		transform: translateY(50px);
	}
	
	.item:hover:after {
		opacity: 1;
	}
	
	.item:hover .thumbnail img {
		transform: scale(1.1);
		filter: blur(3px);
	}
	
	.item:hover .prod_name, .item:hover .prod_price {
		opacity: 1;
		transform: translateY(0px);
	}
	
	.item:after, .item .description img, .item .prod_name, .item .prod_price {
  		transition: all 0.4s ease-in-out;
	}

	.hr {
		width : 100%;
		margin : 0;
	}
	#searchBar {
		border: 3px solid black;
		display: flex;
/* 		justify-content: space-around; */
/* 		padding: 0 3%; */
		width : 100%;
	}
	
	#searchBox {
		display : flex;
		flex-direction: column;
		width : 100%;
		height : 100%;
	}
	
	#ctgryTab {
		margin : 0 2%;
	}
	
	#clickCtgry table {
		width : 100%;
		height : 100%;
	}
	
	#searchTable .checkedBox {
		width : 100%;
		display : inline-block;
		flex-direction: row;
		display: flex;
	}
	
	.columnName {
		width : 20%;
	}
	
	.radioBtn {
		width : 75%;
		justify-content: space-around;
	}

	
/********** Prod Detail (ProdDetail.jsp) **********/

	#sectionDetail {
		width : 100%;
		display: flex;
		justify-content: center;
	}
	#detail_container{
		width : 80%;
		height : 1000px;
		display : flex;
		justify-content : flex-start;
	}
	.asideImg .descInfo {
		width : 45%;	
	}
	#prodImg {
		width : 500px;
		height : 500px;
	}
	
	.hr{
		border: 1px solid black;
		height: 0;
		margin: 20px auto 0;
	}
	table{
	border-collapse: collapse;
	border: 2px solid black;
	}

	td{
		padding: 5px;
	}
	
	#searchText{
		width: 70%;
		height: 30px;
	}
	
	
	
	
	
