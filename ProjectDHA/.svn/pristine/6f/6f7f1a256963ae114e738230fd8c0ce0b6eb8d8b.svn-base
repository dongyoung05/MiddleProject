<%@page import="kr.or.ddit.vo.MemberVO"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>DHA Main Page</title>

<script src="../js/jquery-3.7.1.min.js"></script>
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

</head>

<style>
/*  일단 모든 div에 border 주기 */
div{ 
	margin: 5px; 
 } 

body{
/* 	background: #FAEAD9; */
	padding: 1% 12% 1% 12%;
}

hr{
	width: 30%;
	background: black;
	border-bottom: 2px;
	color: balck;
}

.header{
	display : flex;
	text-align: center;
}

.nav{
	display: flex;
	justify-content: space-around;
	padding: 5px 20% 5px 20%;
	margin-bottom: 30px;
}

.containers{
	text-align: center;
}

.container{
	margin-bottom: 100px;
	height: 400px;
}

.container img{
	width: 25%; 
	margin: 1%;
}

.footer{
	height: 120px;
	display: flex;
	justify-content: space-around;
}

.nav div{
	border-radius: 10px;
	width: 120px;
	text-align: center;
}

.nav div:hover{
	color: gray;
}

.slideBtn{
	position: absolute; 
	top: 370px; 
	width: 50px; 
	height: 100px;
	background: none;
	border : none;
}

.slideBtn p{
	height: 100%;
	font-size: 3.0rem;
	color: gray;
}

.slideBtn p:hover{
	color: black;
}

.hr{
	border: 1px solid black;
	width: 40%;
	margin: 0 auto;
}

#right{
	right: 10%; 
}

#left{
	left: 10%; 
}

#profile{
	margin-left : auto;
	display : flex;
}

#profile_detail{
	width : 200px;
}

#profile_detail input{
	background: white;
	border: none;
}

img{
	width: 90%;
	height: 90%;
}

#mainImg img{
	display: none;
	width: 150%;
	height: 100%;
	position: absolute;
	left: -25%;
	margin: none;
}

#profileImg{
	height: 90px;
	width: 90px;
}

#logo{
	height: 100px;
	width: 200px;
	margin-left: 40%;
}
</style>

<%
// 여기는 Session 객체로 로그인 정보 받아올 곳
// 로그인 정보가 있냐 없냐에 따라 명함에 버튼, 프로필, 인삿말 변경되야함

String imgPath = "../images/main";
MemberVO memberVo = (MemberVO)session.getAttribute("loginok");
%>


<script>


$(function(){
	
	// 로고 클릭시 홈으로
	$('#logo').on('click', function(){
		location.href="<%= request.getContextPath()%>/main/main.jsp";
	})
	
	// 중분류 페이지 이동
	$('#hotel_intro').on('click', function(){
		location.href="<%= request.getContextPath()%>/hotel/hotelIntro.jsp";
	})
	
	$('#hotel_reserve').on('click', function(){
		location.href="<%= request.getContextPath()%>/hotel/hotelReserve.jsp";
	})
	
	$('#salon_reserve').on('click', function(){
		location.href="<%= request.getContextPath()%>/salon/salonReserve.jsp";
	})
	
	$('#pord_sale').on('click', function(){
		location.href="<%= request.getContextPath()%>/prod/prodSale.jsp";
	})
	
	$('#hotel_help').on('click', function(){
		location.href="<%= request.getContextPath()%>/hotel/hotelHelp.jsp";
	})
	
	
	// 메인 사진 오른쪽 화살표 눌렀을 때 사진 이동
	$('#right').on('click', function(){
		$.slideImg(1);
	})
	
	$('#left').on('click', function(){
		$.slideImg(-1);
	})
	
	// 현재 메인 페이지 사진
	curMainImg = 1;
	
	$.slideImg = function(n){
		if(n == 1 && curMainImg == $('.slideImg').length) {
			curMainImg = 1;
		}else if(n == -1 && curMainImg == 1) {
			curMainImg = $('.slideImg').length;
		} else{
			curMainImg = curMainImg + n;
		}
			
		$.each($('.slideImg'), function(i, v){
			$(v).css('display', 'none');
			
			if(i == curMainImg - 1) $(v).css('display', 'inline-block');
		});
	}
	
	// 로그인
	$('#login').on('click', function(){
		location.href="<%= request.getContextPath() %>/member/LoginMember.jsp";
	})
	
	// 회원가입
	$('#join').on('click', function(){
		location.href="<%= request.getContextPath() %>/member/InsertMember.jsp;"
	})
	
	// 로그아웃처리
	$('#logout').on('click', function(){
		location.href="<%= request.getContextPath() %>/logoutMember.do";
	})
	
})

</script>


<body>

<!-- 
	클래스 이름: header - 메인 페이지 맨 위 div
	요소: logo, profile(명함)
 -->
<div class="header">
	<!-- 로고 이미지 - images폴더에서 사진 가져옴 -->
	<img id="logo" src="<%= imgPath %>/대충로고1.png" alt="대충로고1.png">
	
	<div id="profile" class="profile">
		<!-- 프로필 이미지 - images 폴더에서 사진 가져옴 추후에 변경해야함 -->
		<img id="profileImg" src="<%= imgPath %>/대충회원프로필1.png" alt="대충회원프로필1.png">
		<!-- 프로필 옆에 문구 + 밑에 버튼 2개 -->
		<div id="profile_detail">
			<!-- 이름 -->
			
		<%
		if(memberVo == null){			
		%>	
			<p style="margin-top: 100px;"></p>

			<input id="login" type="button" value="로그인" style="margin-left:10px;">
			<input id="join" type="button" value="회원가입" style="margin-left:10px;">

<%
		} else {
%>	
			<p style="margin-top: 100px;"><%=memberVo.getMem_name() %>님 반갑습니다.</p>	
			<input id="myPage" type="button" value="마이페이지" style="margin-left:10px;">
			<input id="logout" type="button" value="로그아웃" style="margin-left:10px;">
<% 
		}
%>
			
		</div>
	</div>
</div>


<!--
	클래스 이름: nav - 메인 페이지 nav
	요소 : 중분류 요소들 (호텔 소개, 호텔 예약, 미용 예약, 상품, 고객센터)
 -->
<div class="nav">
	
	<div id="hotel_intro">
		<h3>소개</h3>
	</div>
	
	<div id="hotel_reserve">
		<h3>호텔</h3>
	</div>
	
	<div id="salon_reserve">
		<h3>미용</h3>
	</div>
	
	<div id="pord_sale">
		<h3>상품</h3>
	</div>
	
	<div id="hotel_help">
		<h3>Q&A</h3>
	</div>

</div>


<!-- 
	클래스 이름: containers - container 전체 묶음
	요소 : 메인 그림, 메인 호텔 예약 사진, 메인 미용 예약 사진, 베스트 상품 사진
 -->
<div class="containers">
	<!-- 메인 그림 - 넘어가는 효과 만들 예정 -->
	<div class="container" id="mainImg">
		<img class="slideImg" style="position: relative; display: inline-block;" src="<%= imgPath %>/MainImgTest02.png" alt="MainImgTest02.png">
		<img class="slideImg" style="position: relative;" src="<%= imgPath %>/MainImgTest03.jpg" alt="MainImgTest03.jpg">
		
  		<button class="slideBtn" id="right"><p>&#10095;</p></button>
		<button class="slideBtn" id="left"><p>&#10094;</p></button>
	</div>
	
	<h1>메인 호텔 예약 사진</h1>
	<div class="hr"></div>
	<div class="container">
		<img src="<%= imgPath %>/스크린샷(152).png" alt="스크린샷(152).png">
		<img src="<%= imgPath %>/스크린샷(153).png" alt="스크린샷(153).png">
		<img src="<%= imgPath %>/스크린샷(154).png" alt="스크린샷(154).png">
	</div>

	<h1>메인 미용 예약 사진</h1>
	<div class="hr"></div>
	<div class="container">
		<img src="<%= imgPath %>/스크린샷(155).png" alt="스크린샷(155).png">
		<img src="<%= imgPath %>/스크린샷(156).png" alt="스크린샷(156).png">
		<img src="<%= imgPath %>/스크린샷(157).png" alt="스크린샷(157).png">
	</div>

	<h1>베스트 상품 사진</h1>
	<div class="hr"></div>
	<div class="container">
		<img src="<%= imgPath %>/스크린샷(158).png" alt="스크린샷(158).png">
		<img src="<%= imgPath %>/스크린샷(159).png" alt="스크린샷(159).png">
		<img src="<%= imgPath %>/스크린샷(160).png" alt="스크린샷(160).png">
	</div>
	
</div>


<!-- 
	클래스 이름: footer - 메인 페이지 맨 밑에 들어갈 호텔 간략 소개나 간략 지도 
	요소: 회사 이름, 찾아오는길 등 나중에 추가 예정
-->
<div class="footer">
	
	<div style="border: 1px solid black; width: 30%;">
		<p>대충 회사 소개</p>
	</div>
	
	<div style="border: 1px solid black; width: 30%;">
		<p>대충 지도</p>
	</div>
	
</div>











</body>
</html>