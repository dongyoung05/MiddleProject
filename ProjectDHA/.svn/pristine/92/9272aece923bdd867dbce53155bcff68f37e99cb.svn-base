<%@page import="kr.or.ddit.vo.BoardVO"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>																								
  <script src="/js/jquery-3.7.1.min.js"></script>
  <script src="/js/jquery.serializejson.min.js"></script>
  <style>
	table {
  		font-family: arial, sans-serif;
  		border-collapse: collapse;
  		width: 100%;
}

	td, th {
 		 border: 1px solid #dddddd;
  		 text-align: left;
  		 padding: 8px;
}

</style>
  <script>
  	<%
		BoardVO boardVo = (BoardVO)request.getAttribute("boardVo"); 	
  	%>
  	$(function() {
  		
  		$('#update').on('click',  function() {
  			
  			location.href = "/board/boardUpdate.jsp?board_no="<%=boardVo.getBoard_no()%>;
  		});
  		
  		
  		$("#boardlist").on('click', function(){
  		  location.href = "<%= request.getContextPath()%>/boardList.do";
  	  })
  		
  	})
  </script>
</head>
<body>
<h2>게시글 내용</h2>	
	<table border="1">
	
			<!-- <th>게시글번호</th>
			<th>분류</th>
			<th>제목</th>
			<th>작성일자</th>
			<th>내용</th> -->
	
	
		<%-- <tr>
			<td>게시글번호</td>
			<td><%=boardVo.getBoard_no()%></td>
		</tr> --%>
		
		<tr>
			<td>제목</td>
			<td><%=boardVo.getBoard_title()%></td>
		</tr>
		
		<%-- <tr>
			<td>분류</td>
			<td><%=boardVo.getBoard_ctgry_no()%></td>
		</tr> --%>
		
		<tr>
			<td>작성일자</td>
			<td><%=boardVo.getBoard_date()%></td>
		</tr>
		
		<tr>
			<td colspan="2"><img src="<%=boardVo.getBoard_img()%>"></td>
		</tr>
		
		<tr>
			<td colspan="2"><%=boardVo.getBoard_content()%></td>
		</tr>	
			
	</table>
			<div style="text-align: center;">
				<input type="button" name="수정" value="수정" id="update">
				<input type="button" name="게시글 목록"value="게시글 목록" id="boardlist">
			</div>
</body>
</html>
