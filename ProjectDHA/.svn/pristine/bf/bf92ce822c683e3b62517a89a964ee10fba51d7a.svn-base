	$('#smallPage').hide();
		
	$('#bigPage div').on('mouseenter', function(){
		$(this).css('color', 'gray');
		$('#smallPage').show();
	})
		
	$('#bigPage div').on('mouseleave', function(){
		$(this).css('color', 'black');
	})
		
	$('#smallPage p').on('mouseenter', function(){
		$(this).css('color', 'black');
	})
		
	$('#smallPage p').on('mouseleave', function(){
