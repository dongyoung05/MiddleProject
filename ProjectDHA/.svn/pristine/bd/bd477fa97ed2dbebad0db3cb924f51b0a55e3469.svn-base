@charset "UTF-8";

/********** 공통 CSS **********/

	div{ 
		margin: 5px; 
	 } 
	
	body{
		padding: 1% 12% 1% 12%;
	}
	
	.header{
		display : flex;
		text-align: center;
	}
	
	.nav {
		margin-bottom: 50px;	
	}
	
	#bigPage {
		width: 100%;
		display: flex; 
		justify-content: center; 
	}
	
	#bigPage div {
		width: 10%;
		text-align: center;
	}
	
	#smallPage {
		width: 100%;
		display: flex;
		justify-content: center; 
		margin-bottom: 30px; 
	}
	
	#smallPage div {
		width: 10%;
		text-align: center;
		color: gray;
	}
	
	#side, #section, #title{
		text-align: center;
	}
	
	#side{
		border: 3px solid black;
		border-radius: 15px;
		display: flex;
		justify-content: space-around;
		padding: 0 25%;
	}
	
	#side p{
		width: 150px;
	}
	
	#side p:hover{
		font-weight: bold;
	}
	
	#section{
		height: 3200px; 
	}
	
	iframe{
		width: 100%;
		height: 100%;
		margin-top: 60px;
		border: none;
	}
	
	.footer{
		height: 50px;
		display: flex;
		justify-content: space-around;
	}
	
	.hr{
		border: 1px solid black;
		width: 40%;
		margin: 0 auto;
	}
	
	#profile{
		margin-left : auto;
		display : flex;
	}
	
	#profile_detail{
		width : 200px;
	}
	
	#profile_detail a{
		margin-right: 10px;
	}
	
	img{
		width: 90%;
		height: 90%;
	}
	
	
	#profileImg{
		height: 70px;
		width: 70px;
		border: 2px solid black;
		border-radius: 50%;
		margin-top: 15px;
	}
	
	#logo{
		height: 100px;
		width: 120px;
		margin-left: 45%;
	}


/********** Cart Main (cartMain.jsp) **********/

	#cartMain {
		width: 150px;
		height : 50px;
		font-size : 24px;
		font-weight : bold;
		display : flex;
		align-items : center;
		justify-content : center; 
	}

	#section{
		border : 2px solid black;
		border-radius : 15px;
		height : 1500px;
		display : flex;
	}

	.full-hr {
		width: 95%;
		height : 2px;
		background : black;
		margin: 20px auto;
	}
	
	.semi-hr {
		width: 95%;
		margin: 5px auto;
		height : 2px;
		background : gray;
	}
	
	#section {
		display : flex;
		justify-content : flex-start;
		flex-direction : column;
		height : auto;
	}
	
	.sectionContainer {
		margin-bottom : 10px;
		display : flex;
		flex-direction: column;
		align-items : center;
	}
	
	.cartProdContainer {
		width : 90%;
		height : 150px;
		border : 1px solid black;
		display : flex;
	}
	
	.cartProdImg {
		max-width : 100%;
		max-height : 100%;
		width : auto;
		height : auto;
	}
	
	.cartProdThumbnail {
		flex : 1;
		display : flex;
		justify-content : center;
		align-items : center;
	}
	
	.cartProdScript {
		flex : 4;
		padding : 5px;
		display : flex;
		flex-direction : column;
	}
	
	.scriptSons {
		height : 60px;
		margin-bottom : 5px;
		display : flex;
		align-items : center;
	}
	
	.scriptSons * {
		margin : 0;
	}
