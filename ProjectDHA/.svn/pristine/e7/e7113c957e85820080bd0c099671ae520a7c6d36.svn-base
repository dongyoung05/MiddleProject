@charset "UTF-8";

.modalSpan{
	display: inline-block;
	width: 100px;	
}

.modal_container{
	display: none;
	position: fixed;
	left: 0; top: 0;
	width: 100%;
	height: 100%;	
	background: rgba(0,0,0,0.5);
}

.modal{
	width: 100%;
	max-width: 400px;
	border-radius: 20px;
	overflow: hidden;
	background: white;
	margin: 100px auto;
	padding: 50px;
}

.modal_header{
	text-align: center;
}

.modal_footer{
	display: flex;
	justify-content: space-between;
}
