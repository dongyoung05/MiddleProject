@charset "UTF-8";




div{ 
	margin: 5px; 
 } 

body{
/* 	background: #FAEAD9; */
	padding: 1% 12% 1% 12%;
}

.header{
	display : flex;
	text-align: center;
}

.nav{
	display: flex;
	justify-content: space-around;
	padding: 5px 20% 5px 20%;
	margin-bottom: 30px;
}

#container{
	display: flex;
	height: 1000px;
}

#side, #section{
	text-align: center;
	width: 12%;
	border: 3px solid black;
	border-radius: 15px;
}

#side h3{
	margin-bottom: 100px;
	margin-top: 50px;
}

#side p{
	margin-bottom: 50px;
}

#side p:hover{
	font-size: 1.2rem;
	font-weight: bold;
}

#section{
	width: 78%;
}

iframe{
	width: 90%;
	height: 80%;
	margin-top: 60px;
}

.footer{
	height: 120px;
	display: flex;
	justify-content: space-around;
}

.nav div{
	border-radius: 10px;
	width: 120px;
	text-align: center;
}

.nav div:hover{
	color: gray;
}

.hr{
	border: 1px solid black;
	width: 40%;
	margin: 0 auto;
}

#profile{
	margin-left : auto;
	display : flex;
}

#profile_detail{
	width : 200px;
}

#profile_detail a{
	margin-right: 10px;
}

img{
	width: 90%;
	height: 90%;
}


#profileImg{
	height: 70px;
	width: 70px;
	border: 2px solid black;
	border-radius: 50%;
	margin-top: 15px;
}

#logo{
	height: 100px;
	width: 120px;
	margin-left: 45%;
}












