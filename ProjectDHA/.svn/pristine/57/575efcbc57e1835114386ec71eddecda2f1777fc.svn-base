<%@page import="kr.or.ddit.vo.BoardVO"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>																								
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="../js/jquery-3.7.1.min.js"></script>
  <script src="../js/jquery.serializejson.min.js"></script>
  <script src="../js/board.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="../css/중분류페이지공통스타일.css">
  <script>
  	<%
		BoardVO boardVo = (BoardVO)request.getAttribute("boardVo"); 	
  	%>
  	$(function(){
  		
  		$('#update').on('click',  function() {
  			var board_no = '<%= boardVo.getBoard_no()%>';
  			var img = '<%= boardVo.getBoard_img()%>';
  			var contextPath = '<%= request.getContextPath()%>';
  			location.href = contextPath+'/board/boardUpdate.jsp?board_no='+board_no+'&img'+img;
  		});
  		
  		
  		$("#boardlist").on('click', function() {
  			location.href=  '<%=request.getContextPath()%>/boardList.do';
  			
  		})
  		
  	})
  </script>
</head>
<body>
<h2>게시글 내용</h2>	
	<table border="1">
	
			<!-- <th>게시글번호</th>
			<th>분류</th>
			<th>제목</th>
			<th>작성일자</th>
			<th>내용</th> -->
	
	
		<tr>
			<td>게시글번호</td>
			<td><%=boardVo.getBoard_no()%></td>
		</tr>
		
		<tr>
			<td>제목</td>
			<td><%=boardVo.getBoard_title()%></td>
		</tr>
		
		<tr>
			<td>분류</td>
			<td><%=boardVo.getBoard_ctgry_no()%></td>
		</tr>
		
		<tr>
			<td>작성일자</td>
			</td><%=boardVo.getBoard_date()%></td>
		</tr>
		
		<tr>
			<td colspan="2"><img src="<%=boardVo.getBoard_img()%>"></td>
		</tr>
		
		<tr>
			<td>내용</td>
			<td><%=boardVo.getBoard_content()%></td>
		</tr>
		
		<tr>
			<td style="text-align: center;" colspan="2">
				<input type="button" name="수정" value="수정" id="update">
				<input type="button" name="게시글 목록"value="게시글 목록" id="boardlist">
			</td>
		</tr>
			
	</table>
</body>
</html>
