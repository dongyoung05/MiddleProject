@charset "UTF-8";




div{ 
	margin: 5px; 
 } 

body{
/* 	background: #FAEAD9; */
	padding: 1% 12% 1% 12%;
}

.header{
	display : flex;
	text-align: center;
}

.nav{
	display: flex;
	justify-content: space-around;
	padding: 5px 20% 5px 20%;
	margin-bottom: 30px;
}

#container{
	display: flex;
	height: 1000px;
}

#side{
	width: 20%;
}

#section{
	width: 78%;
}

.footer{
	height: 120px;
	display: flex;
	justify-content: space-around;
}

.nav div{
	border-radius: 10px;
	width: 120px;
	text-align: center;
}

.nav div:hover{
	color: gray;
}


.hr{
	border: 1px solid black;
	width: 40%;
	margin: 0 auto;
}

#profile{
	margin-left : auto;
	display : flex;
}

#profile_detail{
	width : 200px;
}

#profile_detail a{
	margin-right: 10px;
}

img{
	width: 90%;
	height: 90%;
}


#profileImg{
	height: 90px;
	width: 90px;
}

#logo{
	height: 100px;
	width: 200px;
	margin-left: 40%;
}












