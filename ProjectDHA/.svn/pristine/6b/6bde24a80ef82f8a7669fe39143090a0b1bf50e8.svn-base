@charset "UTF-8";

/********** 공통 CSS **********/

	div{ 
		margin: 5px; 
	 } 
	
	body{
		padding: 1% 12% 1% 12%;
	}
	
	.header{
		display : flex;
		text-align: center;
	}
	
	.nav {
		margin-bottom: 50px;	
	}
	
	#bigPage {
		width: 100%;
		display: flex; 
		justify-content: center; 
	}
	
	#bigPage div {
		width: 10%;
		text-align: center;
	}
	
	#smallPage {
		width: 100%;
		display: flex;
		justify-content: center; 
		margin-bottom: 30px; 
	}
	
	#smallPage div {
		width: 10%;
		text-align: center;
		color: gray;
	}
	
	#side, #section, #title{
		text-align: center;
	}
	
	#side{
		border: 3px solid black;
		border-radius: 15px;
		display: flex;
		justify-content: space-around;
		padding: 0 25%;
	}
	
	#side p{
		width: 150px;
	}
	
	#side p:hover{
		font-weight: bold;
	}
	
	#section{
		height: 3200px; 
	}
	
	iframe{
		width: 100%;
		height: 100%;
		margin-top: 60px;
		border: none;
	}
	
	.footer{
		height: 50px;
		display: flex;
		justify-content: space-around;
	}
	
	.hr{
		border: 1px solid black;
		width: 40%;
		margin: 0 auto;
	}
	
	#profile{
		margin-left : auto;
		display : flex;
	}
	
	#profile_detail{
		width : 200px;
	}
	
	#profile_detail a{
		margin-right: 10px;
	}
	
	img{
		width: 90%;
		height: 90%;
	}
	
	
	#profileImg{
		height: 70px;
		width: 70px;
		border: 2px solid black;
		border-radius: 50%;
		margin-top: 15px;
	}
	
	#logo{
		height: 100px;
		width: 120px;
		margin-left: 45%;
	}


/********** Cart Main (cartMain.jsp) **********/

